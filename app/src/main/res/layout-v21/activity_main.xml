    <EditText
        android:id="@+id/view_total_25"
        android:layout_width="173dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/view_emi_25"
        app:layout_constraintEnd_toEndOf="@+id/view_total_30"
        app:layout_constraintStart_toStartOf="@+id/view_total_30"
        app:layout_constraintTop_toTopOf="@+id/view_emi_25"
        android:text="@string/decimal_start_value" />

    <EditText
        android:id="@+id/view_emi_30"
        android:layout_width="173dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_30"
        app:layout_constraintStart_toEndOf="@+id/lbl_30"
        app:layout_constraintTop_toTopOf="@+id/lbl_30"
        android:text="@string/decimal_start_value" />

    <EditText
        android:id="@+id/view_total_30"
        android:layout_width="173dp"
        android:layout_height="40dp"
        android:layout_marginEnd="3dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/view_emi_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view_emi_30"
        android:text="@string/decimal_start_value" />

    <EditText
        android:id="@+id/view_loan_amt"
        android:layout_width="233dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="@string/decimal_start_value"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_loan_amt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view_loan_int" />

    <SeekBar
        android:id="@+id/view_loan_int"
        android:layout_width="122dp"
        android:layout_height="26dp"
        android:layout_marginStart="27dp"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_interest_rate"
        app:layout_constraintStart_toEndOf="@+id/lbl_interest_rate"
        app:layout_constraintTop_toTopOf="@+id/lbl_interest_rate" />

    <TextView
        android:id="@+id/view_loan_perc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/interest_rate_start_value"
        app:layout_constraintBottom_toBottomOf="@+id/view_loan_int"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_loan_int"
        app:layout_constraintTop_toTopOf="@+id/view_loan_int" />

