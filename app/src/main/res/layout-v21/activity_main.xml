<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/lbl_loan_amt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/loan_amt_lbl"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lbl_interest_rate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lbl_interest_rate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_interest_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/interest_rate_lbl"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_loan_amt" />

    <TextView
        android:id="@+id/lbl_years"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/years_lbl"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lbl_5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_interest_rate" />

    <TextView
        android:id="@+id/lbl_emi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emi_lbl"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/view_emi_5"
        app:layout_constraintStart_toStartOf="@+id/view_emi_5"
        app:layout_constraintTop_toTopOf="@+id/lbl_years" />

    <TextView
        android:id="@+id/lbl_total_amt"
        android:layout_width="166dp"
        android:layout_height="21dp"
        android:gravity="center"
        android:text="@string/total_amt_lbl"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/view_total_5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/view_total_5"
        app:layout_constraintTop_toTopOf="@+id/lbl_emi" />

    <TextView
        android:id="@+id/lbl_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yr_5_lbl"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lbl_10"
        app:layout_constraintEnd_toEndOf="@+id/lbl_10"
        app:layout_constraintStart_toStartOf="@+id/lbl_10"
        app:layout_constraintTop_toBottomOf="@+id/lbl_years" />

    <TextView
        android:id="@+id/lbl_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yr_10_lbl"
